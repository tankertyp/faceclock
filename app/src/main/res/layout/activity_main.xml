<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!--底部-->
    <View
        style="@style/Line"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="bottom">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rlHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <TextView
                        android:id="@+id/tvHomeNormal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/home_normal"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray0"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvHomePress"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/home_pressed"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/main_blue"
                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoRelativeLayout>


            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tvHomeTextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textColor="@color/gray0"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvHomeTextPress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textColor="@color/main_blue"
                    android:textSize="16sp"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llDiscovery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="bottom">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rlDiscovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tvDiscoveryNormal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/discovery_normal"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray5"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvDiscoveryPress"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/discovery_pressed"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/main_blue"
                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tvDiscoveryTextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discovery"
                    android:textColor="@color/gray0"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvDiscoveryTextPress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discovery"
                    android:textColor="@color/main_blue"
                    android:textSize="16sp"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llMe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="bottom">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rlMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/tvMeNormal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/me_normal"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/gray5"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvMePress"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/me_pressed"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/main_blue"
                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/tvMeTextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me"
                    android:textColor="@color/gray0"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tvMeTextPress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me"
                    android:textColor="@color/main_blue"
                    android:textSize="16sp"/>
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>