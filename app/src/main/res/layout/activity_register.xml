<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/include_toolbar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/name"
                        android:textColor="@color/black0"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/etNick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="例如：FaceClockGo"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray3"
                        android:textSize="20sp" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:id="@+id/vLineNick"
                    style="@style/Line" />
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/ivAlbum"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/area"
                android:textColor="@color/black0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@string/china"
                android:textColor="@color/main_blue"
                android:textSize="18sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View style="@style/Line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAreaCode"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="+86"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/phone"
                android:inputType="phone"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray3"
                android:textSize="18sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@+id/vLinePhone"
            style="@style/Line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEmail"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@mipmap/ic_email" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/your_email"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray3"
                android:textSize="18sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@+id/vLineEmail"
            style="@style/Line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/password"
                    android:textColor="@color/black0"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="56dp"
                    android:background="@null"
                    android:hint="填写密码"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray3"
                    android:textSize="18sp" />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/ivSeePwd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                app:srcCompat="@mipmap/ic_see_pwd" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:id="@+id/vLinePwd"
            style="@style/Line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/verification_code"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etVerifyCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_input_verification_code"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray3"
                android:textSize="18sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/btnSendCode"
                android:layout_width="100dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/selector_register_send_code"
                android:text="@string/send_code_btn_normal_tip"
                android:textColor="@color/main_blue"
                android:textSize="20sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@+id/vLineVertifyCode"
            style="@style/Line" />



            <Button
                android:id="@+id/btnRegister"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_login_register_btn"
                android:enabled="false"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="30sp" />


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>